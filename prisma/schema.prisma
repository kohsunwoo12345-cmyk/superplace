// Prisma Schema for SUPER PLACE Marketing Platform

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// User Model
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String
  phone         String?
  company       String?
  role          String    @default("USER")
  emailVerified DateTime?
  image         String?
  approved      Boolean   @default(false)
  approvedBy    String?
  approvedAt    DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  accounts      Account[]
  sessions      Session[]
  subscriptions Subscription[]
  payments      Payment[]
  
  // Social Media Connections
  naverBlog     NaverBlog[]
  naverPlace    NaverPlace[]
  instagram     Instagram[]
  youtube       Youtube[]
  tiktok        TikTok[]
  karrot        Karrot[]
  
  // Analytics
  analytics     Analytics[]
}

// NextAuth Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Subscription Model
model Subscription {
  id          String           @id @default(cuid())
  userId      String
  planType    String
  status      String
  startDate   DateTime         @default(now())
  endDate     DateTime
  autoRenew   Boolean          @default(true)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  
  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  payments    Payment[]
}

// Payment Model
model Payment {
  id              String          @id @default(cuid())
  userId          String
  subscriptionId  String
  amount          Int
  currency        String          @default("KRW")
  status          String
  paymentMethod   String
  transactionId   String?
  orderId         String          @unique
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  
  user            User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  subscription    Subscription    @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)
}

// Social Media Platform Models

// Naver Blog
model NaverBlog {
  id            String      @id @default(cuid())
  userId        String
  blogId        String
  blogName      String
  accessToken   String?
  refreshToken  String?
  connected     Boolean     @default(true)
  lastSynced    DateTime?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  posts         BlogPost[]
  
  @@unique([userId, blogId])
}

model BlogPost {
  id            String      @id @default(cuid())
  naverBlogId   String
  postId        String
  title         String
  content       String?
  url           String
  viewCount     Int         @default(0)
  likeCount     Int         @default(0)
  commentCount  Int         @default(0)
  publishedAt   DateTime
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  
  naverBlog     NaverBlog   @relation(fields: [naverBlogId], references: [id], onDelete: Cascade)
  
  @@unique([naverBlogId, postId])
}

// Naver Place
model NaverPlace {
  id            String      @id @default(cuid())
  userId        String
  placeId       String
  placeName     String
  address       String?
  category      String?
  accessToken   String?
  refreshToken  String?
  connected     Boolean     @default(true)
  lastSynced    DateTime?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  reviews       PlaceReview[]
  
  @@unique([userId, placeId])
}

model PlaceReview {
  id            String      @id @default(cuid())
  naverPlaceId  String
  reviewId      String
  author        String
  rating        Int
  content       String?
  reviewDate    DateTime
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  
  naverPlace    NaverPlace  @relation(fields: [naverPlaceId], references: [id], onDelete: Cascade)
  
  @@unique([naverPlaceId, reviewId])
}

// Instagram
model Instagram {
  id            String      @id @default(cuid())
  userId        String
  instagramId   String
  username      String
  accessToken   String?
  refreshToken  String?
  connected     Boolean     @default(true)
  lastSynced    DateTime?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  posts         InstagramPost[]
  
  @@unique([userId, instagramId])
}

model InstagramPost {
  id            String      @id @default(cuid())
  instagramId   String
  postId        String
  caption       String?
  mediaType     String
  mediaUrl      String?
  permalink     String
  likeCount     Int         @default(0)
  commentCount  Int         @default(0)
  publishedAt   DateTime
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  
  instagram     Instagram   @relation(fields: [instagramId], references: [id], onDelete: Cascade)
  
  @@unique([instagramId, postId])
}

// YouTube
model Youtube {
  id            String      @id @default(cuid())
  userId        String
  channelId     String
  channelName   String
  accessToken   String?
  refreshToken  String?
  connected     Boolean     @default(true)
  lastSynced    DateTime?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  videos        YoutubeVideo[]
  
  @@unique([userId, channelId])
}

model YoutubeVideo {
  id            String      @id @default(cuid())
  youtubeId     String
  videoId       String
  title         String
  description   String?
  thumbnailUrl  String?
  viewCount     Int         @default(0)
  likeCount     Int         @default(0)
  commentCount  Int         @default(0)
  publishedAt   DateTime
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  
  youtube       Youtube     @relation(fields: [youtubeId], references: [id], onDelete: Cascade)
  
  @@unique([youtubeId, videoId])
}

// TikTok
model TikTok {
  id            String      @id @default(cuid())
  userId        String
  tiktokId      String
  username      String
  accessToken   String?
  refreshToken  String?
  connected     Boolean     @default(true)
  lastSynced    DateTime?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  videos        TikTokVideo[]
  
  @@unique([userId, tiktokId])
}

model TikTokVideo {
  id            String      @id @default(cuid())
  tiktokId      String
  videoId       String
  description   String?
  coverUrl      String?
  videoUrl      String?
  viewCount     Int         @default(0)
  likeCount     Int         @default(0)
  commentCount  Int         @default(0)
  shareCount    Int         @default(0)
  publishedAt   DateTime
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  
  tiktok        TikTok      @relation(fields: [tiktokId], references: [id], onDelete: Cascade)
  
  @@unique([tiktokId, videoId])
}

// Karrot (당근마켓)
model Karrot {
  id            String      @id @default(cuid())
  userId        String
  karrotId      String
  nickname      String
  regionName    String?
  accessToken   String?
  refreshToken  String?
  connected     Boolean     @default(true)
  lastSynced    DateTime?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  products      KarrotProduct[]
  
  @@unique([userId, karrotId])
}

model KarrotProduct {
  id            String      @id @default(cuid())
  karrotId      String
  productId     String
  title         String
  price         Int
  description   String?
  imageUrl      String?
  status        String
  viewCount     Int         @default(0)
  chatCount     Int         @default(0)
  likeCount     Int         @default(0)
  publishedAt   DateTime
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  
  karrot        Karrot      @relation(fields: [karrotId], references: [id], onDelete: Cascade)
  
  @@unique([karrotId, productId])
}

// Analytics Model
model Analytics {
  id            String      @id @default(cuid())
  userId        String
  platform      String
  date          DateTime
  impressions   Int         @default(0)
  reach         Int         @default(0)
  engagement    Int         @default(0)
  clicks        Int         @default(0)
  conversions   Int         @default(0)
  revenue       Float       @default(0)
  metadata      String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, platform, date])
}

// Scheduled Post Model (콘텐츠 스케줄링)
model ScheduledPost {
  id            String      @id @default(cuid())
  userId        String
  platform      String      // "naver_blog", "instagram", "youtube", etc.
  title         String?
  content       String
  mediaUrls     String?     // JSON array of media URLs
  scheduledFor  DateTime    // 예약 시간
  status        String      @default("PENDING") // PENDING, PUBLISHED, FAILED, CANCELLED
  publishedAt   DateTime?
  error         String?
  metadata      String?     // Platform-specific data
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  
  @@index([userId, status])
  @@index([scheduledFor])
}

// Content Template Model (템플릿 라이브러리)
model ContentTemplate {
  id            String      @id @default(cuid())
  userId        String
  name          String
  category      String      // "social", "blog", "email", etc.
  platform      String?     // Platform-specific template
  title         String?
  content       String
  thumbnail     String?
  tags          String?     // JSON array
  timesUsed     Int         @default(0)
  isPublic      Boolean     @default(false)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  
  @@index([userId, category])
}

// URL Shortener Model (URL 단축 및 트래킹)
model ShortUrl {
  id            String      @id @default(cuid())
  userId        String
  shortCode     String      @unique
  originalUrl   String
  title         String?
  clickCount    Int         @default(0)
  lastClickedAt DateTime?
  expiresAt     DateTime?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  
  clicks        UrlClick[]
  
  @@index([userId])
  @@index([shortCode])
}

model UrlClick {
  id            String      @id @default(cuid())
  shortUrlId    String
  ipAddress     String?
  userAgent     String?
  referer       String?
  country       String?
  city          String?
  clickedAt     DateTime    @default(now())
  
  shortUrl      ShortUrl    @relation(fields: [shortUrlId], references: [id], onDelete: Cascade)
  
  @@index([shortUrlId, clickedAt])
}
